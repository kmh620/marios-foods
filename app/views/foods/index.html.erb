<h1>All foods</h1>

<% if @foods.any? %>

<ul>

  <% @foods.each do |food| %>
  <li><%= food.name %> | <%= link_to "Edit Food", edit_food_path(food) %> | <%= link_to "Delete Food", food_path(food),
                   :data => {:confirm => "You sure?",
                         :method => "delete"} %>
                              </li>

<% end %>
  </ul>

<% else %>
<p>There are no foods. Add one below!</p>
<% end %>


<%= link_to "New Food", new_food_path %>
