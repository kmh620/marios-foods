<h1>Mario's Specialty Foods</h1>
<h2><%= @food.name %></h2>
<h5>Price: $<%= @food.price %></h5>
<h5>Country of origin: <%= @food.origin %></h5>

<% if @food.reviews.any? %>

  <h4>Reviews:</h4>
  <ul>
    <% @food.reviews.each do |review| %>
      <li id="review-list">
        <%= review.content_body %> <br> ~ <%= review.author %> <br> <%= review.rating %>/5 |
        <%= link_to "Delete", food_review_path(@food, review),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet</p>
<% end %>

<p><%= link_to "Add a review", new_food_review_path(@food) %></p>
<p><%= link_to "Edit Food", edit_food_path(@food) %></p>
<p><%= link_to "Delete Food", food_path(@food),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>
